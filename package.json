  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/precommit.sh"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "^1.0.0",
    "node-static": "^0.7.11",
    "prettier": "^1.13.5",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "printWidth": 100
  }
