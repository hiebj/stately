{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017.object", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "pretty": true
  },
  "include": ["./src/**/*"]
}
