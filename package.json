{
  "name": "stately",
  "version": "0.0.1",
  "description": "Elegant state management",
  "private": true,
  "author": {
    "name": "Jon Hieb",
    "email": "hiebj@live.com",
    "url": "https://github.com/hiebj"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hiebj/stately"
  },
  "scripts": {
    "prettier": "prettier --write packages/**/*.ts*",
    "docs": "rm -rf docs/ && typedoc --options typedoc.json ./",
